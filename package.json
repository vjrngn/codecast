{
  "name": "codecast",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "lint": "eslint . --ext .ts",
    "start": "tsc && node dist/server.js",
    "start:dev": "nodemon src/server.ts",
    "migration:create": "typeorm migration:create --name",
    "entity:create": "typeorm entity:create --name",
    "migration:run": "ts-node $(yarn bin typeorm) migration:run",
    "migration:revert": "ts-node $(yarn bin typeorm) migration:revert"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "knex": "^0.95.4",
    "morgan": "~1.9.0",
    "pg": "^8.6.0",
    "twig": "~0.10.3",
    "typeorm": "^0.2.38",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.11.6",
    "@types/sinon": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "expect": "^27.3.1",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "sinon": "^10.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
